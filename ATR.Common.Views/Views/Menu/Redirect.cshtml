@model ATR.Common.Models.UrlViewModel

@{
    ViewBag.Title = "Loading...";
}

<div id="waitMessage" class="container text-center">
    <div class="form-group row">
        <div class="col-12">
            <i class="fa fa-spinner fa-pulse fa-3x fa-fw error"></i>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            <h4>Please wait while loading your application...</h4>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.replace("@Model.RedirectUrl");
    }, 0); // Wait timeout used for tests only, set to 0 on production
</script>